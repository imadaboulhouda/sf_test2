{% extends 'base.html.twig' %}

{% block title %}Hello SiteController!{% endblock %}

{% block body %}
<div class="container">
    <div class="card">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>NAME</th>
                <th>Created at</th>
            </tr>
            </thead>
            <tbody>

{% for x in categories %}
             <tr>
                <th>{{ x.id }}</th>
                <th>{{ x.name }}</th>
                <th>{{ x.createdAt | date('Y-m-d')}}</th>
                <th><a href="{{ path('app_category_edit',{id:x.id}) }}">Edit</a></th>
            </tr>
{% endfor %}

            </tbody>
        </table>
    
    </div>
</div>
{% endblock %}
